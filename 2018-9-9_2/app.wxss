/* 导入 字体图标 */
@import '/libs/font/font.wxss'

/* 抽取的底部的样式 */

.play-box{
  width: 750rpx;
  height: 200rpx;
  position:fixed;
  bottom: 0px;
  left: 0;
  z-index: 5;
  background-color: white;
}
.play-box .left{
  float: left;
  height: 100%;
  width: 50%;
  margin-left: 20rpx;
  display: flex;
}
.play-box .left image{
  width: 50%;
  height: 50%;
  margin-top: 50rpx;
  margin-right: 20rpx;
}
.play-box .left text{
  color: purple;
  font-size: 24rpx;
}
.play-box .left .song{
  color: red;
  font-size: 28rpx;
  display: block;
  margin:60rpx 0 10rpx;
}
.play-box .right{
  float: right;
  height: 100%;
  width: 45%;
  position: relative;
}
.play-box .right text:nth-child(1){
  bottom: 60rpx;
  position: absolute;
  right: 200rpx;
  font-size: 60rpx;
}

.play-box .right text:nth-child(2){
  bottom: 60rpx;
  font-size: 60rpx;
  position: absolute;
  right: 50rpx;
}
